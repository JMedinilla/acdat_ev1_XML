<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#0040FF"
    android:orientation="vertical"
    tools:context="com.examen.pablo.jm_xml.Ej4_Noticias">

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:weightSum="10">

        <Button
            android:textSize="18sp"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:text="El PaÃ­s"
            android:id="@+id/btnEJ4_ElPais" />

        <Button
            android:textSize="18sp"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:text="El Mundo"
            android:id="@+id/btnEJ4_ElMundo" />
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:weightSum="10">

        <Button
            android:textSize="18sp"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:text="Linux Magazine"
            android:id="@+id/btnEJ4_LinuxMagazine"
            android:layout_height="wrap_content" />

        <Button
            android:textSize="18sp"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:text="PCWorld"
            android:id="@+id/btnEJ4_PCWorld"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ListView
        android:background="#FFFFFF"
        android:layout_marginTop="15dp"
        android:dividerHeight="5sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listaNoticias"
        android:layout_gravity="center_horizontal" />
</LinearLayout>
