<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.examen.pablo.jm_xml.Ej2_Tiempo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textAlignment="center"
            android:text="Fecha"
            android:gravity="center"
            android:background="#0080FF"
            android:textColor="#FFFFFF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:background="#0080FF"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Hoy"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:id="@+id/txtEj2_FechaHoy"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="4"
                android:background="#81DAF5">

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="00-06"
                    android:gravity="center"
                    android:textColor="#000000" />

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="06-12"
                    android:gravity="center"
                    android:textColor="#000000" />

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="15pt"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="12-18"
                    android:gravity="center"
                    android:textColor="#000000" />

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="15pt"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="18-24"
                    android:gravity="center"
                    android:textColor="#000000" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="10"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginRight="2dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Estado\ndel cielo"
            android:gravity="center"
            android:background="#FFFFFF"
            android:textColor="#000000" />

        <ImageView
            android:layout_marginRight="15dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/img_Ej2_Hoy_1" />

        <ImageView
            android:layout_marginRight="10dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/img_Ej2_Hoy_2" />

        <ImageView
            android:layout_marginRight="5dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/img_Ej2_Hoy_3" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/img_Ej2_Hoy_4" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textAlignment="center"
            android:text="Temp.\nmin./max. (ºC)"
            android:gravity="center"
            android:background="#FFFFFF"
            android:textColor="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="30"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="14"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="--"
                android:gravity="right"
                android:layout_gravity="center"
                android:id="@+id/txtEJ2_Temperatura_Hoy_Minima"
                android:background="#FFFFFF"
                android:textColor="@android:color/holo_blue_light" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="/"
                android:gravity="right"
                android:layout_gravity="center"
                android:background="#FFFFFF"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="14"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="--"
                android:gravity="left"
                android:layout_gravity="center"
                android:id="@+id/txtEJ2_Temperatura_Hoy_Maxima"
                android:background="#FFFFFF"
                android:textColor="@android:color/holo_red_light" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textAlignment="center"
            android:text="Fecha"
            android:gravity="center"
            android:background="#0080FF"
            android:textColor="#FFFFFF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:background="#0080FF"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Mañana"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:id="@+id/txtEj2_FechaManana"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="4"
                android:background="#81DAF5">

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="00-06"
                    android:gravity="center"
                    android:textColor="#000000" />

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="06-12"
                    android:gravity="center"
                    android:textColor="#000000" />

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="15pt"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="12-18"
                    android:gravity="center"
                    android:textColor="#000000" />

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="15pt"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="18-24"
                    android:gravity="center"
                    android:textColor="#000000" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="10"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginRight="2dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Estado\ndel cielo"
            android:gravity="center"
            android:background="#FFFFFF"
            android:textColor="#000000" />

        <ImageView
            android:layout_marginRight="15dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/img_Ej2_Manana_1" />

        <ImageView
            android:layout_marginRight="10dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/img_Ej2_Manana_2" />

        <ImageView
            android:layout_marginRight="5dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/img_Ej2_Manana_3" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/img_Ej2_Manana_4" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textAlignment="center"
            android:text="Temp.\nmin./max. (ºC)"
            android:gravity="center"
            android:background="#FFFFFF"
            android:textColor="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="30"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="14"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="--"
                android:gravity="right"
                android:layout_gravity="center"
                android:id="@+id/txtEJ2_Temperatura_Manana_Minima"
                android:background="#FFFFFF"
                android:textColor="@android:color/holo_blue_light" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="/"
                android:gravity="right"
                android:layout_gravity="center"
                android:background="#FFFFFF"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="14"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="--"
                android:gravity="left"
                android:layout_gravity="center"
                android:id="@+id/txtEJ2_Temperatura_Manana_Maxima"
                android:background="#FFFFFF"
                android:textColor="@android:color/holo_red_light" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
